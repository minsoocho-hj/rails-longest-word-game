<div>
  <h1>☄️ Welcome to the longest word game</h1>
  <%@letters.each do |letter| %>
  <span><%= letter %></span>
  <% end %>

  <form action="/score">
    <input type="text" name="answer"  placeholder="Type your longest word">
    <input type="submit" value="Submit!">
  </form>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</div>
